{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Percentage of Famous Mathematicans who Emigrated vs Immigrated by Country",
  "width": 800,
  "height": 600,
  "data": {
    "url": "worldMap.topojson",
    "format": {
      "type": "topojson",
      "feature": "worldMap"
    }
  },
  "transform": [{
    "lookup": "properties.NAME",
    "from": {
      "data": { "url": "data_final_final.csv" },
      "key": "Country",
      "fields": ["Index"]
    }
  }],
  "projection": { "type": "equirectangular" },
  "mark": { 
    "type": "geoshape",
    "stroke": "#757575"
  },
  "encoding": {
    "color": {
      "field": "Index",
      "type": "quantitative",
      "scale": { "scheme": "redyellowgreen" },
      "legend": {
        "title": null,
        "format": "%"
      }
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {"field": "Index", "type": "quantitative"}
    ]
  }
}
  